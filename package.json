{
  "name": "splash-js",
  "version": "1.0.0",
  "description": "",
  "author": "Luke Sims",
  "license": "MIT",
  "main": "dist/splash.js",
  "scripts": {
    "build": "npm-run-all --parallel js css",
    "watch": "npm-run-all --parallel css-watch js-watch",
    "js": "npm-run-all js-lint js-test js-clean js-compile",
    "js-watch": "nodemon --watch ./src/js -e js -x \"npm run js\"",
    "js-clean": "del-cli ./dist/js/**",
    "js-compile": "npm-run-all --parallel js-compile-*",
    "js-compile-default": "node build/scripts.js --input=src/js/splash.js --name=splash.js",
    "js-compile-min": "node build/scripts.js --input=src/js/splash.js --name=splash.min.js --uglify",
    "js-lint": "eslint src/js/ build/",
    "js-test": "jest --verbose",
    "css": "npm-run-all css-lint css-clean css-compile",
    "css-watch": "nodemon --watch ./src/scss -e scss -x \"npm run css\"",
    "css-clean": "del-cli ./dist/css/**",
    "css-compile": "npm-run-all --parallel css-compile-*",
    "css-compile-default": "node build/styles.js --input=src/scss/splash.scss --name=splash.css --prefix",
    "css-compile-min": "node build/styles.js --input=src/scss/splash.scss --name=splash.min.css --prefix --minify",
    "css-lint": "stylelint --syntax scss \"src/scss/**/*.scss\"",
    "pretest": "npm run build"
  },
  "devDependencies": {
    "autoprefixer": "^8.6.5",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.4.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "cssnano": "^4.0.0",
    "del-cli": "^1.1.0",
    "eslint": "^5.1.0",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-plugin-import": "^2.13.0",
    "filesize": "^3.6.1",
    "jest": "^23.4.1",
    "node-notifier": "^5.2.1",
    "node-sass": "^4.9.2",
    "nodemon": "^1.17.5",
    "npm-run-all": "^4.1.3",
    "postcss": "^6.0.23",
    "rollup": "^0.62.0",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-uglify": "^4.0.0",
    "stylelint": "^9.3.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.1.3"
  },
  "browserslist": [
    "last 1 major version",
    ">= 1%",
    "Chrome >= 45",
    "Firefox >= 38",
    "Edge >= 12",
    "Explorer >= 10",
    "iOS >= 9",
    "Safari >= 9",
    "Android >= 4.4",
    "Opera >= 30"
  ],
  "output": {
    "css": "./dist/css",
    "js": "./dist/js"
  }
}
